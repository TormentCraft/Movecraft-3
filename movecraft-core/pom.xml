<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <artifactId>movecraft-core</artifactId>
    <version>3.0</version>
    <name>Movecraft Core</name>

    <parent>
        <groupId>net.countercraft</groupId>
        <artifactId>movecraft-all</artifactId>
        <version>3.0</version>
    </parent>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-shade-plugin</artifactId>
                <version>2.1</version>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <goals>
                            <goal>shade</goal>
                        </goals>
                        <configuration>
                            <artifactSet>
                                <excludes>
                                    <exclude>org.bukkit:craftbukkit</exclude>
                                    <exclude>org.spigotmc:spigot-api</exclude>
                                    <exclude>org.yaml:snakeyaml</exclude>
                                    <exclude>com.sk89q:worldguard</exclude>
                                    <exclude>com.sk89q:worldedit</exclude>
                                    <exclude>at.pavlov:Cannons</exclude>
                                    <exclude>com.sk89q:jchronic</exclude>
                                    <exclude>com.sk89q:commandbook</exclude>
                                    <exclude>com.nijikokun:iconomy</exclude>
                                    <exclude>org.bukkit:bukkit</exclude>
                                    <exclude>rhino:js</exclude>
                                    <exclude>junit:junit</exclude>
                                    <exclude>de.schlichtherle:truezip</exclude>
                                    <exclude>net.sf.opencsv</exclude>
                                    <exclude>com.google.guava</exclude>
                                    <exclude>com.google.code.findbugs:jsr305</exclude>
                                    <exclude>net.ess3:Essentials</exclude>
                                    <exclude>com.palmergames:Towny</exclude>
                                    <exclude>net.milkbowl.vault:VaultAPI</exclude>
                                    <exclude>com.mewin:WGCustomFlags</exclude>
                                </excludes>
                            </artifactSet>
                            <minimizeJar>true</minimizeJar>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

    <dependencies>
        <dependency>
            <groupId>org.bukkit</groupId>
            <artifactId>craftbukkit</artifactId>
            <version>LATEST</version>
            <scope>system</scope>
            <systemPath>${basedir}/../spigot/craftbukkit.jar</systemPath>
        </dependency>
        <dependency>
            <groupId>com.sk89q.worldedit</groupId>
            <artifactId>worldedit-bukkit</artifactId>
            <version>14.6</version>
            <scope>system</scope>
            <systemPath>${basedir}/../../plugins/worldedit-bukkit/worldedit-bukkit.jar</systemPath>
        </dependency>
        <dependency>
            <groupId>net.milkbowl.vault</groupId>
            <artifactId>Vault</artifactId>
            <version>1.2.32</version>
            <scope>system</scope>
            <systemPath>${basedir}/../../plugins/Vault/Vault.jar</systemPath>
        </dependency>
        <dependency>
            <groupId>at.pavlov.Cannons</groupId>
            <artifactId>Cannons</artifactId>
            <version>2.4.3</version>
            <scope>system</scope>
            <systemPath>${basedir}/../../plugins/Cannons/Cannons.jar</systemPath>
        </dependency>
        <dependency>
            <groupId>com.sk89q</groupId>
            <artifactId>worldguard</artifactId>
            <version>LATEST</version>
            <scope>system</scope>
            <systemPath>${basedir}/../../plugins/worldguard-bukkit/worldguard-bukkit.jar</systemPath>
        </dependency>

        <!-- This doesn't have a maven repo but its own -->
        <dependency>
            <groupId>com.palmergames</groupId>
            <artifactId>Towny</artifactId>
            <version>LATEST</version>
            <scope>system</scope>
            <systemPath>${project.basedir}/../libs/Towny.jar</systemPath>
        </dependency>
        <dependency>
            <groupId>com.mewin</groupId>
            <artifactId>WGCustomFlags</artifactId>
            <version>LATEST</version>
            <scope>system</scope>
            <systemPath>${project.basedir}/../libs/WGCustomFlags.jar</systemPath>
        </dependency>
    </dependencies>
</project>
